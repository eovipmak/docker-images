# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=v_insight

# Backend API Configuration
BACKEND_PORT=8080
# CORS_ALLOWED_ORIGINS - Comma-separated list of allowed origins
# For development:
#   - Use "*" to allow all origins (recommended for local development)
#   - Or leave empty to allow all origins in development mode
#   - Or specify: http://localhost:3000,http://127.0.0.1:3000
# For production with VPS IP: http://YOUR_VPS_IP:3000 (e.g., http://1.2.3.4:3000)
# For production with domain: Set to your exact frontend domain (e.g., https://yourdomain.com)
# IMPORTANT: Must match where your frontend is accessed from
# SECURITY WARNING: "*" is only allowed in development mode (ENV=development)
# In production mode, specific origins must be configured
CORS_ALLOWED_ORIGINS=*

# Worker Configuration
WORKER_PORT=8081

# Frontend Configuration
FRONTEND_PORT=3000
# PUBLIC_API_URL - API endpoint accessible from browser
# For local development: http://localhost:8080
# For production with VPS IP: Set to http://YOUR_VPS_IP:8080 (e.g., http://1.2.3.4:8080)
# For production with domain: Set to your backend domain (e.g., https://api.yourdomain.com)
# IMPORTANT: When using VPS IP or custom domain, also update CORS_ALLOWED_ORIGINS accordingly
PUBLIC_API_URL=http://localhost:8080

# Environment
ENV=development
