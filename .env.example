# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=v_insight

# Backend API Configuration
BACKEND_PORT=8080

# JWT Configuration
# SECURITY: Change this to a random secret in production
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-secret-change-in-production

# Worker Configuration
WORKER_PORT=8081

# Frontend Configuration
FRONTEND_PORT=3000
# Comma-separated list of allowed hosts for Vite dev server
# Required when using reverse proxy (e.g., monit.24-7.top)
# For production deployments, add your domain to this list
VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# Public API URL for frontend (browser-side)
# For development: http://localhost:8080
# For production: https://yourdomain.com or http://your-server-ip:8080
PUBLIC_API_URL=http://localhost:8080

# Environment
ENV=development

# Security Configuration
# HSTS (HTTP Strict Transport Security) max age in seconds (default: 31536000 = 1 year)
HSTS_MAX_AGE=31536000
# Include subdomains in HSTS policy (default: true)
HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting Configuration
# Per-IP rate limit: requests per minute (default: 100)
RATE_LIMIT_PER_IP=100
# Per-user rate limit: requests per hour (default: 1000)
RATE_LIMIT_PER_USER=1000
